                @Html.DisplayFor(modelItem => item.PracownikUsuwajacy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CzyAktywny)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdStrony">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdStrony">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdStrony">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
