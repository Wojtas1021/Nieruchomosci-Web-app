            <td>
                @Html.DisplayFor(modelItem => item.DataUtworzenia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PracownikDodajacy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataEdycji)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PracownikEdytujacy)
